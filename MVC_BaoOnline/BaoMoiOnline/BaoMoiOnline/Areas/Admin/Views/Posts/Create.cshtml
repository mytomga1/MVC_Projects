@model BaoMoiOnline.Models.Post

@{
    ViewData["Title"] = "Thêm Mới Bài Viết";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section Styles {
    @*<link href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css" rel="stylesheet"/>
    <link href="~/AdminAssets/lib/select2/css/select2.min.css" rel="stylesheet"/>*@
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-bs4.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-bs4.min.js"></script>
}

    <div class="slim-pageheader">
        <ol class="breadcrumb slim-breadcrumb">
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Posts" asp-action="Index">Quản Lý Bài Viết</a></li>
            <li class="breadcrumb-item active" aria-current="page">Thêm Mới Bài Viết</li>
        </ol>
        <h6 class="slim-pagetitle">THÊM MỚI BÀI VIẾT</h6>
    </div><!-- slim-pageheader -->
    <hr />

    <div class="section-wrapper">
        <div class="form-layout">
            <form asp-area="Admin" asp-controller="Posts" asp-action="Create" method="post" enctype="multipart/form-data">
                <div class="row mg-b-25">

                    <div class="col-lg-12">
                        <div class="form-group">
                            <label class="form-control-label">Tiêu Đề : <span class="tx-danger"> *</span></label>
                            <input class="form-control" type="text" name="Title" asp-for="Title" placeholder="Nhập Tiêu Đề Bài Viết">
                        </div>
                    </div><!-- col-12 -->

                    <div class="col-lg-12">
                        <div class="form-group">
                            <label class="form-control-label">Miêu tả nội dụng ngắn gọn:</label>
                            <input class="form-control" type="text" name="ShortContents" asp-for="ShortContents" maxlength="255" placeholder="Miêu tả nội dụng ngắn gọn">
                        </div>
                    </div><!-- col-12 -->

                    <div class="col-lg-6">
                        <div class="form-group mg-b-10-force">
                            <label class="form-control-label">Danh mục :<span class="tx-danger"> *</span></label>
                            <select class="form-control select2" asp-for="CatId" asp-items="@ViewBag.DanhMuc" required>
                                <option label="DANH MỤC"></option>
                            </select>
                        </div>
                    </div><!-- col-4 -->

                    <div class="col-lg-6 mg-t-40 mg-lg-t-0">
                        <label class="form-control-label">Ảnh bài Viết :</label>
                        <div class="mg-t-8">
                            <input name="fImg" type="file" asp-for="Img" class="form-control-file">
                        </div>
                        <!-- custom-file -->
                    </div>

                    <div class="col-lg-12">
                        <div class="form-group">
                            <label class="form-control-label">Tags :</label>
                            <input class="form-control" type="text" name="Tag" asp-for="Tag" placeholder="Nhập Tag Bài Viết">
                        </div>
                    </div><!-- col-12 -->

                    <div class="col-lg-12">
                        <div class="form-group">
                            <label class="form-control-label">MetaKey :</label>
                            <input class="form-control" type="text" name="Tag" asp-for="Cat.MetaKey" placeholder="Nhập MetaKey">
                        </div>
                    </div><!-- col-12 -->

                    <div class="col-lg-12">
                        <div class="form-group">
                            <label class="form-control-label">MetaDesc :</label>
                            <input class="form-control" type="text" name="Tag" asp-for="Cat.MetaDesc" placeholder="Nhập MetaDesc">
                        </div>
                    </div><!-- col-12 -->

                    <div class="col-lg-12">
                        <div class="form-group mg-b-10-force">
                            <div class="mb-3">
                                <label for="ContentsTextarea" class="form-label">Nội Dung Bài Viết: </label>
                                <textarea class="form-control" asp-for="Contents" id="ContentsTextarea" rows="3" style="height: 300px;"></textarea>
                            </div>
                        </div>
                    </div><!-- col-12 -->
                    
                    <div>
                        <input asp-for="CreateDate" value="@DateTime.Now.ToString("yyyy-mm-dd hh:mm:ss")" hidden/>
                    </div>


                    <div class="col-lg-6 mg-t-40 mg-lg-t-0">

                        <p class="mg-b-10">More Options: </p>

                        <div id="cbWrapper" class="parsley-checkbox">
                            <label class="ckbox">
                                <input type="checkbox" asp-for="IsHost"><span>Tin Nóng</span>
                            </label>
                            <label class="ckbox">
                                <input type="checkbox" asp-for="IsNewfeed"><span>Tin Mới</span>
                            </label>
                        </div>
                    </div>


                </div><!-- row -->

                <div class="form-layout-footer">
                    <button class="btn btn-primary bd-0">Tạo mới</button>
                    <a asp-area="Admin" asp-controller="Posts" asp-action="Index" class="btn btn-secondary bd-0">Quay lại </a>
                </div>

            </form>
        </div><!-- form-layout -->
    </div><!-- section-wrapper -->
    @section Script  {
        <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
        <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
        <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>

        <script>
          $('#ContentsTextarea').summernote({
            placeholder: 'Nội Dung Bài Viết',
            tabsize: 2,
            height: 100
          });
        </script>
    }

