@model BaoMoiOnline.Models.Post

@{
    ViewData["Title"] = "Xoá Bài Viế";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="slim-pageheader">
    <ol class="breadcrumb slim-breadcrumb">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Posts" asp-action="Index">Quản Lý Bài Viết</a></li>
        <li class="breadcrumb-item active" aria-current="page">Xoá Bài Viết</li>
    </ol>
    <h6 class="slim-pagetitle">XÁC NHẬN XOÁ BÀI VIẾT</h6>
</div><!-- slim-pageheader -->
<hr />

<div class="section-wrapper mg-t-20">
    <h4>Bạn Chắc Muốn Xoá Chứ ?</h4>
    <br />
    <form asp-area="Admin" asp-controller="Posts" asp-action="Delete" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="PostId" />
        <div class="form-layout form-layout-6">
            <div class="row no-gutters">
                <div class="col-5 col-sm-4">
                    ID :
                </div><!-- col-4 -->
                <div class="col-7 col-sm-8">
                    <input class="form-control" type="text" asp-for="PostId">
                    <span asp-validation-for="CatId" PostId="text-danger"></span>
                </div><!-- col-8 -->
            </div><!-- row -->
            <div class="row no-gutters">
                <div class="col-5 col-sm-4">
                    Tiêu Đề Bài Viết :
                </div><!-- col-4 -->
                <div class="col-7 col-sm-8">
                    <input class="form-control" type="text" asp-for="Title">
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div><!-- col-8 -->

            </div><!-- row -->

            <div class="form-layout-footer mg-t-30" style="text-align:center !important">
                <div class="form-group">
                    <input type="submit" value="Xoá" class="btn btn-danger" />
                    <a asp-area="Admin" asp-controller="Posts" asp-action="Index" class="btn btn-secondary bd-0">Quay lại </a>
                </div>
            </div><!-- row -->
        </div><!-- form-layout -->
    </form>
</div><!-- section-wrapper -->