@model BaoMoiOnline.Models.Post

@{
    ViewData["Title"] = "Chỉnh Sửa Bài Viết";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="slim-pageheader">
    <ol class="breadcrumb slim-breadcrumb">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Posts" asp-action="Index">Quản Lý Bài Viết</a></li>
        <li class="breadcrumb-item active" aria-current="page">Chỉnh Sửa Bài Viết</li>
    </ol>
    <h6 class="slim-pagetitle">CHỈNH SỬA BÀI VIẾT</h6>
</div><!-- slim-pageheader -->
<hr />

<div class="section-wrapper">
    <div class="form-layout">
        <form asp-area="Admin" asp-controller="Posts" asp-action="Edit" asp-route-id="@Model.PostId" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="PostId"/>
            <input type="hidden" asp-for="CreateDate"/>
            <input type="hidden" asp-for="Img"/>
            <input type="hidden" asp-for="AccountId"/>
            <input type="hidden" asp-for="Author"/>
            <input type="hidden" asp-for="Alias"/>
            <input type="hidden" asp-for="CreateDate"/>
            <div class="row mg-b-25">

                <div class="col-lg-4">
                    <div class="form-group">
                        <label class="form-control-label">Tên Danh Mục: <span class="tx-danger">*</span></label>
                        <input class="form-control" type="text" name="CatName" asp-for="Title" placeholder="Nhập Tên Danh mục">
                    </div>
                </div><!-- col-4 -->

                         
            </div><!-- row -->  

            <div class="form-layout-footer">
                <button class="btn btn-primary bd-0">Lưu Thay Đổi</button>
                <a asp-area="Admin" asp-controller="Categories" asp-action="Index" class="btn btn-secondary bd-0">Quay lại </a>
            </div>

        </form>
    </div><!-- form-layout -->
</div><!-- section-wrapper -->

