@using PagedList.Core.Mvc
@model PagedList.Core.IPagedList<BaoMoiOnline.Models.Role>

@{
    ViewData["Title"] = "QUẢN LÝ QUYỀN TRUY CẬP";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="slim-pageheader">
    <ol class="breadcrumb slim-breadcrumb">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Roles" asp-action="Index">Quản Lý Quyền Truy Cập</a></li>
    </ol>
    <h6 class="slim-pagetitle">QUẢN LÝ QUYỀN TRUY CẬP</h6>
</div><!-- slim-pageheader -->
<hr />

<a asp-area="Admin" asp-controller="Roles" asp-action="Create" class="btn btn-outline-pink mg-b-10">Thêm Mới</a>

<div class="table-responsive">
    <table class="table table-bordered table-colored table-primary">
        <thead>
            <tr>
                <th class="wd-10p">ID</th>
                <th class="wd-35p">Role Name</th>
                <th class="wd-35p">Role Description</th>
                <th class="wd-20p">Action</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Count() > 0)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@Html.DisplayFor(modelItem => item.RoleId)</th>
                        <td>@Html.DisplayFor(modelItem => item.RoleName)</td>
                        <td>@Html.DisplayFor(modelItem => item.RoleDescription)</td>

                        <td>
                            <a asp-area="Admin" asp-controller="Roles" asp-action="Edit" asp-route-id="@item.RoleId" class="btn btn-success">Edit</a>
                            <a asp-area="Admin" asp-controller="Roles" asp-action="Details" asp-route-id="@item.RoleId" class="btn btn-primary">Details</a>
                            <a asp-area="Admin" asp-controller="Roles" asp-action="Delete" asp-route-id="@item.RoleId" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div><!-- table-responsive -->
<hr />
